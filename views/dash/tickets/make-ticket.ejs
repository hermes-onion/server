<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./global/head') %>
    <%- include('./dash/head') %>
    
    <title>Hermes - Create ticket</title>
</head>
<body>
    <%- include('./dash/header') %>
    <%- include('./dash/sidenav') %>
<main>
    <%- include('global/errors') %>
    <div class="row">
        <div class="col s12 m12 l6">
            <p class="flow-text">Create ticket</p>
    
            <form action="/dash/tickets" method="POST">

                <div class="input-field ">
                    <input placeholder="Ticket topic" name="topic" type="text" maxlength="256" minlength="3"
                        value="" required>
                    <!-- <label for="topic">Ticket topic</label> -->
                </div>
      
                <div class="input-field">
                  <textarea class="browser-default" 
                            placeholder="Text message. Max 100000 chars. Multines supported." 
                            name="message" 
                            minlength="3" maxlength="100000" required></textarea>
                  <!-- <label for="message">Text message. Max 100000 chars. Multines supported.</label> -->
                </div>
      
                <button class="btn green darken-2 waves-effect waves-light"> Create</button>
            </form>
        </div>

    </div>

</main>
<%- include('./footer') %>

<script>
    <%- include('./global/util') %>

</script>

</body>
</html>
